@page "/products"
@using invMed.Data
@inject ProductsService productsService

<h3>Products</h3>

<NavLink href="addProduct">
    Add product
</NavLink>

@if (products == null)
{
    <p><em>Loading...</em></p>
}

<table class="table">
    <thead>
        <tr>
            <th>Product Id</th>
            <th>Name</th>
            <th>Category</th>
            <th>Amount</th>
            <th>Price</th>
            <th>Action</th>
            <th>Items</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in products)
        {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Category</td>
            <td>@product.Amount</td>
            <td>@product.Price</td>
            <td>
                <a href="editProduct/@product.Id">Edit </a>
                <a href="deleteProduct/@product.Id">Delete </a>
                <a href="detailsProduct/@product.Id">Details </a>
            </td>
            <td>
                <a href="items/@product.Id">Items</a>
            </td>
        </tr>
        }
    </tbody>
</table>

@code {
    private List<Product> products;

    protected override async Task OnInitializedAsync()
    {
        products = await productsService.GetProducts();
    }

}
