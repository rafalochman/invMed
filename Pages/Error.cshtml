@page
@model invMed.Pages.ErrorModel

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Błąd</title>
    <link href="~/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/app.css" rel="stylesheet" />
</head>

<body>
    <div class="main">
        <div class="content px-4">
            <h1 class="text-danger">Bład.</h1>
            <h2 class="text-danger">Wystąpił błąd podczas obsługi żądania.</h2>

            @if (Model.ShowRequestId)
            {
                <p>
                    <strong>ID żądania:</strong> <code>@Model.RequestId</code>
                </p>
            }

            <h3>Tryb deweloperski</h3>
        </div>
    </div>
</body>

</html>
