@page "/editProduct/{id:int}"
@using invMed.Data
@inject ProductsService productsService
@inject NavigationManager NavigationManager

<h3>Edit Product</h3>

<form>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="col-form-label">Name</label>
                <input form="Name" class="form-control" @bind="@product.Name" />
            </div>
            <div class="form-group">
                <label class="col-form-label">Category</label>
                <input form="Category" class="form-control" @bind="@product.Category" />
            </div>
            <div class="form-group">
                <label class="col-form-label">Amount</label>
                <input form="Amount" class="form-control" @bind="@product.Amount" />
            </div>
            <div class="form-group">
                <label class="col-form-label">Price</label>
                <input form="Price" class="form-control" @bind="@product.Price" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@UpdateProduct" value="Update" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@code {
    [Parameter]
    public int Id { get; set; }

    Product product = new Product();

    protected override async Task OnInitializedAsync()
    {
        product = await productsService.GetProductById(Id);
    }

    protected void UpdateProduct()
    {
        productsService.EditProduct(product);
        NavigationManager.NavigateTo("products");
    }

    protected void Cancel()
    {
        NavigationManager.NavigateTo("products");
    }
}